{
  "watch": ["src/**/*.js"],
  "ignore": [
    "node_modules/**",
    "data/**",
    "credentials/**",
    "logs/**",
    ".git/**"
  ],
  "ext": "js,json",
  "delay": 500,
  "verbose": false,
  "restartable": "rs",
  "stdin": true,
  "legacyWatch": false,
  "env": {
    "NODE_ENV": "development"
  }
}

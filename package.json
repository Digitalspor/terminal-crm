{
  "name": "crm-terminal",
  "version": "0.1.0",
  "description": "Terminal-basert CRM med Claude Canvas og Fiken integrasjon",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "crm": "node src/index.js",
    "dashboard": "babel-node src/dashboard-ink.js",
    "dashboard:blessed": "node src/dashboard-blessed.js",
    "dashboard:dev": "nodemon --exec babel-node src/dashboard-ink.js",
    "dashboard:watch": "node --watch src/index.js dashboard",
    "dev": "node --watch src/index.js",
    "fiken:auto-sync": "node src/fiken-auto-sync.js",
    "db:init": "node --experimental-modules -e \"import('./src/db/database.js').then(m => m.db.connect())\"",
    "db:sync": "node --experimental-modules -e \"import('./src/db/sync.js').then(m => m.dbSync.importFromJSON())\"",
    "commit": "git add . && git commit",
    "sync": "git pull --rebase && git push",
    "pull": "git pull --rebase"
  },
  "keywords": [
    "crm",
    "terminal",
    "cli",
    "fiken"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "better-sqlite3": "^12.6.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "fuse.js": "^7.1.0",
    "googleapis": "^131.0.0",
    "ink": "^6.6.0",
    "ink-box": "^2.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "react": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "nodemon": "^3.1.11"
  }
}
